/*
Police lights using FastLED library 
and an Arduino Uno by Noah Naugle
*/
#define FASTLED_INTERNAL
#include "FastLED.h"
#define COLOR_ORDER GRB
#define LED_TYPE WS2812B
#define NUM_LEDS 60

CRGBArray<NUM_LEDS> leds1;

//bottom row led strip arrays are leds1
//top row led strip arrays are leds2
CRGBSet group1(leds1(0,5));
CRGBSet group2(leds1(6,11));
CRGBSet group3(leds1(12,17));
CRGBSet group4(leds1(18,23));
CRGBSet group5(leds1(24,29));
CRGBSet group6(leds1(31,36));
CRGBSet group7(leds1(37,42));
CRGBSet group8(leds1(43,48));
CRGBSet group9(leds1(49,54));
CRGBSet group10(leds1(55,60));


CHSV color1(0,255,255);      //red
CHSV color2(160,255,255);   //blue
CHSV color3(0,0,0);       //black

void setup() {
  
  FastLED.addLeds<WS2812, 6, GRB>(leds1, NUM_LEDS);   //strip1 or bottom row
  FastLED.setBrightness(255);             //full brightness

}

void loop() {
  for(int x = 0; x < 3; x++) {  //repeat the flash 3 times
    group1 = color1;      //on; off; 3x
    group3 = color1;
    group5 = color1;


    FastLED.show(100);
    delay(50);

    group1 = color3; 
    group3 = color3;
    group5 = color3;

    FastLED.show(100);
    delay(50);
  }
  for(int x = 0; x < 3; x++) {
    group2 = color1; 
    group4 = color1;

    FastLED.show(100);
    delay(50);

    group2 = color3; 
    group4 = color3;
    
    FastLED.show(100);
    delay(50);
  }
  for(int x = 0; x < 3; x++) {
    group6 = color2; 
    group8 = color2;
    group10 = color2;
    
    FastLED.show(100);
    delay(50);

    group6 = color3; 
    group8 = color3;
    group10 = color3;

    FastLED.show(100);
    delay(50);
  }
  for(int x = 0; x < 3; x++) {
    group7 = color2; 
    group9 = color2;

    FastLED.show(100);
    delay(50);

    group7 = color3; 
    group9 = color3;
    
    FastLED.show(100);
    delay(50);
  }
}
